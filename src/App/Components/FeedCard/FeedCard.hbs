<div class="feed-card" data-action="card_page" data-feed_card_id="{{id}}">
    <div class="feed-card__header">
        <div class="feed-card-author" data-action="profile_page" data-data="{{author.id}}">
            <img src="{{author.avatar}}" alt="" class="feed-card-author__avatar" />
            <div>
                <div class="feed-card-author__name">{{author.first_name}} {{author.last_name}}</div>
                <div class="feed-card__date">{{date}}</div>
            </div>
        </div>
        {{#if showTools}}
        <div class="feed-card__buttons">
            <img src="../src/img/pen_icon.svg" alt="" class="feed-card__button" data-action="edit" />
            <img src="../src/img/trash_icon.svg" alt="" class="feed-card__button" data-action="delete" />
        </div>
        {{/if}}
    </div>
    <div class="feed-card__content"> {{text}}</div>
    <div class="feed-card__attachments">
        {{#each attachments as |attachment|}}
        <img src="{{attachment.src}}" alt="image" class="feed-card__picture" />
        {{/each}}
    </div>
    <div class="feed-card__footer">
        <div class="feed-card-likes">
            <div id="feed-card-likes__count-{{id}}" class="feed-card-likes__count">{{likes}}</div>
            <div class="feed-card-likes__count">likes</div>
        </div>
        <div class="feed-card__buttons">
            <svg class="feed-card__button" data-action="like" width="20" height="19" viewBox="0 0 20 19"
                xmlns="http://www.w3.org/2000/svg">
                <path class="feed-card__button__{{isLiked}}"
                    d="M10.001 1.52898C12.35 -0.58002 15.98 -0.51002 18.243 1.75698C20.505 4.02498 20.583 7.63698 18.479 9.99298L9.99901 18.485L1.52101 9.99298C-0.582994 7.63698 -0.503994 4.01898 1.75701 1.75698C4.02201 -0.50702 7.64501 -0.58302 10.001 1.52898V1.52898ZM16.827 3.16998C15.327 1.66798 12.907 1.60698 11.337 3.01698L10.002 4.21498L8.66601 3.01798C7.09101 1.60598 4.67601 1.66798 3.17201 3.17198C1.68201 4.66198 1.60701 7.04698 2.98001 8.62298L10 15.654L17.02 8.62398C18.394 7.04698 18.319 4.66498 16.827 3.16998V3.16998Z"
                    fill="black" />
            </svg>

            <img src="../src/img/comment_icon.svg" alt="" class="feed-card__button" data-action="comment" />
            <img src="../src/img/link_icon.svg" alt="" class="feed-card__button" data-action="share" />
        </div>
    </div>
</div>