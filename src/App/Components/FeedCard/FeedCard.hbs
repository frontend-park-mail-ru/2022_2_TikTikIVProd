<div class="feed__card">
  <div class="feed__card__header">
    <div class="feed__card__author">
      <img src="{{author.avatar}}" alt="" class="feed__card__author__avatar" />
      <div>
        <div class="feed__card__author__name">{{author.name}}</div>
        <div class="feed__card__date">{{date}}</div>
      </div>
    </div>
    <div class="feed__card__buttons">
      <img src="../src/img/pen_icon.svg" alt="" class="feed__card__button edit" />
      <img src="../src/img/trash_icon.svg" alt="" class="feed__card__button delete" />
    </div>
  </div>
  <div class="feed__card__content"> {{text}}</div>
  <div class="feed__card__attachments">
    {{#each attachments as |attachment|}}
      <img src="{{attachment.src}}" alt="" class="feed__card__attachments__item" />
    {{/each}}
  </div>
  <div class="feed__card__footer">
    <div class="feed__card__likes"><img src="../src/img/like_filled_icon.svg" alt="" class="feed__card__likes__icon">{{likes}}</div>
    <div class="feed__card__buttons">
      <img src="../src/img/like_icon.svg" alt="" class="feed__card__button like" />
      <img src="../src/img/comment_icon.svg" alt="" class="feed__card__button comment" />
      <img src="../src/img/link_icon.svg" alt="" class="feed__card__button link" />
    </div>
  </div>
</div>
