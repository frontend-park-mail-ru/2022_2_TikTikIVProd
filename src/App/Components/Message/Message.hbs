<div class="message">
    <img src="{{user.avatar}}" class="author-message__avatar" alt="">
    <div class="message__wrapper">
        <div class="author-message__name">{{user.first_name}} {{user.last_name}}</div>
        <div class="message__date">
            {{date}}
        </div>
        <div class="message__content">
            <div class="message__text">
                {{text}}
            </div>
            <div class="message__attachments">

            </div>
        </div>
    </div>
</div>