<div class="message">
    <img src="{{user.avatar}}" class="author-message__avatar" alt="" data-action="user_profile"
        data-user_id="{{user.id}}">
    <div class="message__wrapper">
        <div class="author-message__name" data-action="user_profile" data-user_id="{{user.id}}">{{user.first_name}}
            {{user.last_name}}</div>
        <div class="message__date">
            {{date}}
        </div>
        <div class="message__content">
            <div class="message__text">{{text}}</div>
            <div class="message__attachments">

            </div>
        </div>
    </div>
</div>